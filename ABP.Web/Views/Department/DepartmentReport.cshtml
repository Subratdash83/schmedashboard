<script>
    function getvisible() {
        var vtable = []
        var headrow = $('#printtable1 thead').find('tr').html();
        vtable.push(headrow);
        $('#printtable1 tbody').find('tr:visible').each(function () {
            var temprow = '';
            if ($(this).css('display') == 'table-row') {
                temprow += '<tr>' + $(this).html() + '</tr>';
            }
            vtable.push(temprow);
        });
        return vtable;
    }
</script>

