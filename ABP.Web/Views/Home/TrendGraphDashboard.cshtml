                    var Ghtml = '<option value="0">---Select---</option>';
                    //console.log(data);
                    for (var i = 0; i < data.length; i++) {
                        Ghtml += '<option value="' + data[i].blocK_CODE + '">' + data[i].blocK_NAME + '</option>'
