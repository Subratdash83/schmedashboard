        var vtable = []
        var headrow = $('#printtable thead').find('tr').html();
        vtable.push(headrow);
        $('#printtable tbody').find('tr:visible').each(function () {
            var temprow = '';
            if ($(this).css('display') == 'table-row') {
                temprow += '<tr>' + $(this).html() + '</tr>';
            }
            vtable.push(temprow);
        });
        return vtable;
    }
