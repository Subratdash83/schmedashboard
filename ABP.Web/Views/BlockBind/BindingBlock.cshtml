                                                percentclass = "back-green";
                                            }
                                            else if (percent >= 50)
                                            {
                                                percentclass = "back-yellow";
                                            }
                                            else if (percent != 0 && percent <= 50)
                                            {
                                                percentclass = "back-red";
                                            }
                                            else
                                            {
